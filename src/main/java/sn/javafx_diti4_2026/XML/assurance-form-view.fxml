<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox spacing="15"
      xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sn.javafx_diti4_2026.controllers.AssuranceFormController"
      style="-fx-font-family:'Comic Sans MS'; -fx-font-weight:bold; -fx-background-color:#FFC0CB;">

    <padding>
        <Insets bottom="15" left="15" right="15" top="10"/>
    </padding>

    <Text fx:id="formTitle" text="Ajouter une Assurance"
          style="-fx-fill:black; -fx-font-weight:bold;">
        <font>
            <Font size="22"/>
        </font>
    </Text>

    <GridPane hgap="10" vgap="10">
        <Label text="Nom Client" style="-fx-text-fill:black;"/>
        <TextField fx:id="nomClient"
                   GridPane.columnIndex="1"
                   style="-fx-background-radius:10; -fx-text-fill:black;"/>

        <Label text="Montant" GridPane.rowIndex="1" style="-fx-text-fill:black;"/>
        <TextField fx:id="montant"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"
                   style="-fx-background-radius:10; -fx-text-fill:black;"/>

        <Label text="Type" GridPane.rowIndex="2" style="-fx-text-fill:black;"/>
        <ComboBox fx:id="typeAssurance"
                  GridPane.columnIndex="1" GridPane.rowIndex="2"
                  prefWidth="200"
                  style="-fx-background-radius:10; -fx-font-weight:bold;"/>
    </GridPane>

    <HBox spacing="10">
        <Button fx:id="btnSave" text="Enregistrer" onAction="#saveAssurance"
                style="-fx-background-color:#D8BFD8; -fx-text-fill:black; -fx-background-radius:20;"/>
        <Button fx:id="btnCancel" text="Annuler" onAction="#cancel"
                style="-fx-background-color:#D8BFD8; -fx-text-fill:black; -fx-background-radius:20;"/>
    </HBox>
</VBox>
